# Database
DATABASE_URL=postgresql://coseal:password@localhost:5432/coseal

# Server
PORT=3000
BASE_URL=http://localhost:3000
NODE_ENV=development
API_KEY=dev_api_key_change_in_production

# Storage
# Options: 's3' or 'local'
STORAGE_TYPE=local
STORAGE_PATH=./storage

# Storage (S3-compatible) — only needed if STORAGE_TYPE=s3
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=coseal-documents
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Encryption
ENCRYPTION_KEY=change_this_to_a_secure_32_byte_key_in_production

# Signing Certificates
SIGNING_CERT_PATH=./certs/signing-cert.pem
SIGNING_KEY_PATH=./certs/signing-key.pem

# Email (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_FROM_NAME=CoSeal

# Email (SMTP Fallback)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_FROM=

# WhatsApp (via Twilio — optional)
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Identity Verification (Twilio Verify)
TWILIO_VERIFY_SERVICE_SID=

# Document Retention (days)
RETENTION_PERIOD_DAYS=2555

# Reminders
REMINDER_INTERVAL_HOURS=48

# Signing Link Expiry (hours)
SIGNING_TOKEN_EXPIRY_HOURS=72

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Branding entitlement (optional — for white-label deployments)
# Without this key, CoSeal branding is displayed and cannot be removed.
# Contact enterprise@coseal.dev for entitlement keys.
COSEAL_BRANDING_ENTITLEMENT=

# Identity Verification Providers (optional — only needed for AES)
JUMIO_API_KEY=
JUMIO_API_SECRET=
# Or:
ONFIDO_API_TOKEN=

# QES Trust Service Provider (optional — only needed for QES)
QES_PROVIDER=
SWISSCOM_AIS_URL=
SWISSCOM_AIS_KEY=
SWISSCOM_AIS_CERT_PATH=
# Or:
NAMIRIAL_API_URL=
NAMIRIAL_API_KEY=

# SSO (optional)
SSO_ENABLED=false
SSO_SP_ENTITY_ID=
SSO_SP_CERT_PATH=
SSO_SP_KEY_PATH=
