<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Full access to all CoSeal features including configuration, sending, and webhook handling.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>CoSeal Admin</label>
    <classAccesses>
        <apexClass>CoSealService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>CoSealEnvelopeController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>CoSealWebhookHandler</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>CoSealConfig</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <fieldPermissions>
        <editable>true</editable>
        <field>CoSeal_Settings__c.API_URL__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>CoSeal_Settings__c.API_Key__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>CoSeal_Settings__c.Default_Template__c</field>
        <readable>true</readable>
    </fieldPermissions>
</PermissionSet>
